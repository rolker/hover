<?xml version="1.0"?>
<package format="2">
  <name>hover</name>
  <version>0.0.0</version>
  <description>The hover package. Implements an action that simulates being at anchor by hovering in place.</description>

  <maintainer email="roland@ccom.unh.edu">Roland Arsenault</maintainer>

  <license>BSD</license>

  <buildtool_depend>catkin</buildtool_depend>

  <depend>behaviortree_cpp</depend>
  <depend>geometry_msgs</depend>
  <depend>geographic_msgs</depend>
  <depend>roscpp</depend>
  <depend>rosbag</depend>
  <depend>project11</depend>
  <depend>project11_navigation</depend>
  <depend>actionlib</depend>
  <depend>actionlib_msgs</depend>
  <depend>geographic_visualization_msgs</depend>
  <depend>dynamic_reconfigure</depend>
  <depend>tf2_ros</depend>
  
  <export>
    <project11_navigation plugin="${prefix}/hover_plugin.xml"/>
    <behaviortree_cpp bt_lib_plugin="libhover_bt_plugin"/>
  </export>

</package>
